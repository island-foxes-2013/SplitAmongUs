<%= form_for [@list, @settlement] do |f| %>
  <!-- add in hidden field -->
  <%= f.hidden_field :list_id, :value => @list.id %>
  <%= f.text_field :payee, placeholder: "Payment to" %>
  <%= f.text_field :payer, placeholder: "Payment From" %>
  <%= f.text_field :amount_cents, placeholder: :amount %>
  <%= f.submit "Record Payment" %>
  <span class='errors'><%= flash[:error] %></span>

<% end %>