<div id="list-amounts">
<!-- Need to make sure we are passing it what list we want to populate here for @list -->
<% @list = List.last %>

<% @total = Money.new(0, "USD") %>
<% @list.bills.each do |bill| %> 
  <% @total += bill.amount %>
<% end %>

<h4>List's Total:</h4>
$<%= @total %>
<br />
<br />
 <% @list.users.each do |user| %>
   <%= "#{user.name}: #{user.amount_owed(@list, user)}" %><br /><br>
 <% end %>






