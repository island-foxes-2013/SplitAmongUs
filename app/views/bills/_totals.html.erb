<h4>I Owe:</h4>
<% @total = Money.new(0, "USD") %>
<% lists.each do |list| %>
<% list.bills.each do |bill| %>
<% if bill.owner_id == current_user.id %> 
<% @total += bill.amount %>
<% end %>
<% end %>
<% end %>
$<%= @total %> 
