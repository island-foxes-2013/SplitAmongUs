<h3>Create a bill:</h3>
<%= form_for [@list, @bill], remote: true do |f| %>
  <span class='errors'></span>
  <%= f.select     :user_id, options_from_collection_for_select(@list.users, 'id', 'name') %>
  <br>
  <br>
  <%= f.text_field :description, placeholder: :description %>
  <%= f.text_field :amount, placeholder: :amount %>
  <%= f.text_field :date, class: :datepicker, placeholder: :date %>
  <%= f.submit "Create bill" %>
<% end %>