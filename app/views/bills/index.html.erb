<!-- needs to be rendered via remote true -->
<% current_user.lists.each do |list| %>
  <% if list.bills.any? %>
    <table>
      <thead>
        <tr><th colspan="6"><%= list.name %></th></tr>
      </thead>
      <tbody>
        <% list.bills.each do |bill| %>
          <tr>
            <td><%=bill.date%></td>
            <td><%=bill.description%></td>
            <td><%=bill.amount%></td>
            <td><%=bill.date_paid%></td>
            <td><%=responsibility_for(bill)%></td>
            <td><%=bill.shared_amount%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>


<h3>Total Amount:</h3>
<% @total = Money.new(0, "USD") %>
<% current_user.lists.each do |list| %>
<% list.bills.each do |bill| %> 
<h5><% @total += bill.amount %></h5>
<% end %>
<% end %>
