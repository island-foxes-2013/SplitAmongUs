<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-12 columns">
        <div class="row">
          <!-- Shows -->
          <div class="large-3 small-6 columns" id="left-column">
            <br />
            <div id="user-info">
              <%= image_tag(current_user.gravatar_url, height: 40, width: 40) %>
              <h4>Hi&nbsp<%=current_user.name%>!</h4>
            </div>
            <%= button_to "All My Bills", user_bills_path(current_user), :method => "get" %>
            <div id="dashboard-lists">
              <div class="list-item-template" style="display: none;">
                <li><a href="/foo/bar" data-remote="true">default</a></li>
              </div>
              <div id="users-contain" class="ui-widget">
                <div class = "row">
                  <div class= "large-6 columns">
                    <div class="headings">
                      <p>view all bills</p>
                        <%- if current_user.lists.any? %>
                          <ul class="lists">
                            <%= render partial: 'lists/list', collection: current_user.lists.order(:created_at) %>
                          </ul>
                      <%- end %>
                    </div>
                  </div>
                </div>
              </div>
                <div class = "row">
                  <div class= "large-6 columns">
                  <div class="headings">
                    <p>my lists</p>
                  </div>
                </div>
              </div>
              <div class = "row">
                <div class= "large-6 columns">
                  <div class="headings">
                    <p>friends</p>
                  </div>
                </div>
              </div>
              <button class="create">Create new list</button>
              <br />
 
              <div class="row">
                <div class="large-1 column">
                </div>
              </div>
            </div>
          </div>
          <!-- End Shows -->


          <!-- Image -->

          <div id="middle_column" class="large-6 small-12 columns">

          <div id="dashboard-main-content" class="large-6 small-6 columns">
            <% if current_user.lists.any? %>
            <%= render template: 'bills/index' %>
            <% else %>
            <p>Welcome to SplitAmong.us!</p>
            <% end %>
          </div>

          <div id="dialog-lists-form">
            <%= render partial: 'lists/new', locals: { lists: current_user.lists.build } %>
          </div>
          <!-- End Image -->


          <!-- Feed -->

          <div class="large-3 small-12 columns" id="right-column">

            <h4>Your Stats:</h4><hr>
            <div class="panel">

              <h6 class="subheader">
                <%= render partial: 'bills/totals' %>
              </h6>

            </div>

            <!-- End Feed -->

          </div>
        </div>
      </div>
