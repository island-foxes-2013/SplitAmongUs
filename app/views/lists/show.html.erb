<div id="list_show">
	<div id="dialog-bills-form">
	  <%= render partial: 'bills/form', locals: { list: @list, bills: @list.bills.build } %>
	</div>

		<% if @list.bills.any? %>
			<table>
				<thead>
					<tr>
						<th colspan="8">
							<%= @list.name %>&nbsp
							<!-- The add is not working--needs to be fixed -->
							<a href='#' class="create">add</button>&nbsp
							<%= link_to "edit", edit_list_path(@list), :method => "get" %>&nbsp
							<%= link_to "x", @list, :confirm => 'Are you sure you want to delete this list?', :method => "delete", :class => 'remote-delete-list' %>	</th>
					</tr>
					<tr>
						<th>date</th>
						<th>description</th>
						<th>total</th>
						<th>paid on</th>
						<th>paid by</th>
						<th>your share</th>
		        <th></th>
		        <th></th>
					</tr>
				</thead>
		<tbody>


		<ul class="bills">
		  <%= render partial: 'bills/bill', collection: @list.bills %>
			<% end %> 
		</ul>
	</tbody>
</table>
	<button id="create-bill">Create A Bill</button>
	<%= button_to "Settle Up", new_list_settlement_path(@list), :method => "get" %>
	<br \>

		<p>List Members:
			<% @list.users.each do |user| %>
				<%= image_tag(user.gravatar_url, :title => user.name, height: 40, width: 40) %>
			<% end %>
			<%= link_to("Add A Friend", new_user_invitation_path(list_id: @list.id)) %>
		</p>
	</div>
</div>