<h2>Sign up</h2>
<!-- at some point it'll move to the left -->
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.text_field :name, placeholder: :name %></div>
  <br />
  <%= f.email_field :email, placeholder: :email %></div>
  <br />
  <%= f.password_field :password, placeholder: :password %></div>
  <br />
  <%= f.password_field :password_confirmation, placeholder: 'password confirmation' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
